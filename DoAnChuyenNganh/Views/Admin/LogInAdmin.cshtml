
@{
    ViewBag.Title = "LogInAdmin";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="main-page login-page ">
    <h2 class="title1">Đăng nhập hệ thống</h2>
    <div class="widget-shadow">


        <div class="login-body">

            <form action="#" method="post">
                @using (Html.BeginForm("LogInAdmin", "Admin"))
                {
                    <h4 style="color:red; font-style: italic;"> @ViewBag.Taikhoan </h4>
                    <input type="text" class="user" name="UserName" placeholder="Nhập tài khoản" required="">
                    <h4 style="color:red; font-style: italic;"> @ViewBag.MatKhau </h4>
                    <input type="password" name="Password" class="lock" placeholder="Nhập mật khẩu" required="">
                    <div class="forgot-grid">
                        <label class="checkbox"><input type="checkbox" name="checkbox" checked=""><i></i>Nhớ mật khẩu</label>
                        <div class="forgot">
                            <a href="#">Quên mật khẩu?</a>
                        </div>
                        <div class="clearfix"> </div>
                    </div>
                    <input type="submit" name="Sign In" value="Đăng nhập">
                    <div class="registration">
                        Không có tài khoản?
                        <a class="" href="signup.html">
                            Tạo một tài khoản
                        </a>
                    </div>
                  }
            </form>

        </div>

    </div>

</div>


