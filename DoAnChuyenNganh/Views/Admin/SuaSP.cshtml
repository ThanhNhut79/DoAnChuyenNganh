@model DoAnChuyenNganh.Models.SanPham

@{
    ViewBag.Title = "SuaSP";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="main-page">
    <div class="forms">
        <div class=" form-grids row form-grids-right">
            <div class="widget-shadow " data-example-id="basic-forms">
                <div class="form-title">
                    <h4>Sữa thông tin sản phẩm</h4>
                </div>
                @using (Html.BeginForm("SuaSP", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <h4>SanPham</h4>
                        <hr />

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.MaSP)

                        <div class="form-group">
                            <label class="col-sm-2 control-label">Tên sản phẩm</label>
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.TenSP, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.TenSP, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label">Giá bán</label>
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.GiaBan, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.GiaBan, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label">Giá gốc</label>
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.GiaGoc, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.GiaGoc, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label">Ngày thêm</label>
                            <div class="col-md-9">
                                <input type="date" name="NgayThem" value="@Model.NgayCapNhap" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label">Mô tả</label>
                            <div class="col-md-9">
                                <textarea id="MoTa" name="MoTa" class="form-control">@Model.MoTa</textarea>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label">Hình 1</label>
                            <div class="col-md-10">
                                <input type="file" name="fileUpload" value="@Model.HinhAnh" />
                                @ViewBag.Thongbao
                                <img src="@Url.Content("~/Content/images/"+ Model.HinhAnh)" width="150" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label">Hình 2</label>
                            <div class="col-md-9">
                                <input type="file" name="fileUpload1" value="@Model.Hinh1" />
                                @ViewBag.Thongbao
                                <img src="@Url.Content("~/Content/images/"+ Model.Hinh1)" width="150" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label">Hình 3</label>
                            <div class="col-md-10">
                                <input type="file" name="fileUpload2" value="@Model.Hinh2" />
                                @ViewBag.Thongbao
                                <img src="@Url.Content("~/Content/images/"+ Model.Hinh2)" width="150" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label">Hình 4</label>
                            <div class="col-md-9">
                                <input type="file" name="fileUpload3" value="@Model.Hinh3" />
                                @ViewBag.Thongbao
                                <img src="@Url.Content("~/Content/images/"+ Model.Hinh3)" width="150" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label">Danh mục</label>
                            <div class="col-md-10">
                                @Html.DropDownList("MaDanhMuc")
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label">Số lượng</label>
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.SLTon, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.SLTon, "", new { @class = "text-danger" })
                            </div>
                        </div>

                       

                        <div class="form-group">
                            <label class="col-sm-2 control-label">Thương hiệu</label>
                            <div class="col-md-9">
                                @Html.DropDownList("MaNSX")
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label">Loại sản phẩm</label>
                            <div class="col-md-9">
                                @Html.DropDownList("MaLoaiSP")
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-9">
                                <input type="submit" value="Lưu thanh đổi" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                }

                <div>
                    @Html.ActionLink("Back to List", "LoadSP")
                </div>
                </div>
</div>
</div>
</div>