@using DoAnChuyenNganh.Models;
@using PagedList.Mvc;
@model PagedList.PagedList<SanPham>

@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_LayoutPet.cshtml";
}


@helper Truncate(string input, int length)
{
    if (input.Length < length)
    {
        @input
    }
    else
    {
        @input.Substring(0, length)<text> . . . </text>
    }
}

<div class="content">
    <div class="container">
        <!--products-->
        <div class="content-mid">
            <h3 style="text-align:center; font-family: Arial">Kết quả tìm kiếm</h3>
            <label class="line"></label>
            <div class="mid-popular">
                @foreach (var KetQuaTimKiem in Model)
                {
                    <div class="col-md-3 item-grid simpleCart_shelfItem">
                        <div class=" mid-pop">
                            <div class="pro-img">
                                <img src="~/Content/images/@KetQuaTimKiem.HinhAnh" class="img-responsive" alt="">
                                <div class="zoom-icon ">
                                    <a class="picture" href="~/Content/images/@KetQuaTimKiem.HinhAnh" rel="title" class="b-link-stripe b-animate-go  thickbox"><i class="glyphicon glyphicon-search icon "></i></a>
                                    <a href="single.html"><i class="glyphicon glyphicon-menu-right icon"></i></a>
                                </div>
                            </div>
                            <div class="mid-1">
                                <div class="women">
                                    <div class="women-top">
                                        <span>Đồ ăn cho chó</span>
                                        <h6><a href="single.html">@Truncate(KetQuaTimKiem.TenSP, 40)</a></h6>
                                    </div>
                                    <div class="img item_add">
                                        <a href="#"><img src="~/Content/images/ca.png" alt=""></a>
                                    </div>
                                    <div class="clearfix"></div>
                                </div>
                                <div class="mid-2">
                                    <p><label>@String.Format("{0:0,0}", KetQuaTimKiem.GiaGoc) VND</label><em class="item_price">@String.Format("{0:0,0}", KetQuaTimKiem.GiaBan) VND</em></p>


                                    <div class="clearfix"></div>
                                </div>

                            </div>
                        </div>
                    </div>}

                <div class="clearfix"></div>
            </div>

        </div>
        <!--//products-->
    </div>

</div>
<div style="margin: 20px 0; text-align: center">
    <ul>
        <li class="active"> @Html.PagedListPager(Model, page => Url.Action("KetQuaTimKiem", new { page = page }))</li>
    </ul>
</div>

