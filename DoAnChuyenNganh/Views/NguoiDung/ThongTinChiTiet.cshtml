
@{
    ViewBag.Title = "ThongTinChiTiet";
    Layout = "~/Views/Shared/_LayoutPet.cshtml";
}

<div class="content">
    <div class="container">
        @using (Html.BeginForm())
        {
            <b style="font-size: 30pt; display: flex; justify-content: center; padding-bottom: 25px; ">Thông tin tài khoản</b>
            <div class="form-group">
                <label class="col-sm-2 control-label">Họ tên</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" name="HoTen" value="@Model.HoTen" required />
                </div>
            </div>
            <br />
            <div class="form-group">
                <label class="col-sm-2 control-label">Số điện thoại</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" name="SDT" value="@Model.SDT" required />
                </div>
            </div>
            <br />
            <div class="form-group">
                <label class="col-sm-2 control-label">Email</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" name="Emial" value="@Model.Email" required />
                </div>
            </div>
            <br />
            <div class="form-group">
                <label class="col-sm-2 control-label">Địa chỉ</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" name="DiaChi" value="@Model.DiaChi" required />
                </div>
            </div>
            <br />
            <div class="form-group">
                <label class="col-sm-2 control-label">Tên đăng nhập</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" name="TaiKhoan" value="@Model.TaiKhoan" readonly />
                </div>
            </div>
            <br />
            <div class="form-group">
                <label class="col-sm-2 control-label">Mật khẩu</label>
                <div class="col-sm-4">
                    <input type="password" class="form-control" name="MatKhau" id="Matkhau" value="@Model.MatKhau" required />
                </div>
                <span class="fas fa-eye" onclick="show()"> </span>
            </div>
            <hr />
            <div class="form-group">
                <label class="col-sm-2 control-label"></label>
                <div class="col-sm-9">
                    <input type="submit" value="Lưu thay đổi" class="btn btn-default" />
                </div>
            </div>
            <br />
            <br />}

    </div>
</div>
