
@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="banner-top">
    <div class="container">
        <h1>Đăng ký</h1>
        <em></em>
        <h2><a href="index.html">Home</a><label>/</label>Đăng ký</h2>
    </div>
</div>

<div class="container">
    <div class="login">
        @using (Html.BeginForm("Register", "NguoiDung"))
        {
            <form>
                @Html.ValidationSummary(true)
                <div class="col-md-6 login-do">
                    <div class="login-mail">
                        <input type="text" placeholder="Nhập tên tài khoản" name="TaiKhoan" required="">                      
                    </div>
                    <div class="login-mail">
                        <input type="password" placeholder="Nhập mật khẩu" name="Password" required="">
                    </div>
                    <div class="login-mail">
                        <input type="password" placeholder="Nhập lại mật khẩu" name="XNMK" required="">
                    </div>
                    <div class="login-mail">
                        <input type="text" placeholder="Họ tên" name="HoTen" required="">
                    </div>
                    <div class="login-mail">
                        <input type="text" placeholder="Địa chỉ" name="DiaChi" required="">
                    </div>
                    <div class="login-mail">
                        <input type="text" placeholder="Email" name="email" required="">
                    </div>
                    <div class="login-mail">
                        <input type="text" placeholder="SDT" name="sdt" required="">
                    </div>
                    <label class="hvr-skew-backward">
                        <input type="submit" value="Đăng ký">
                    </label>

                </div>
                <div class="col-md-6 login-right">
                    <h3>Đăng ký thành công</h3>

                    <p>
                        Bạn muốn đang muốn đặt hàng hoặc mua hàng tại PetBest thì bạn phải đăng ký tài khoản trước khi mua nhé !
                     </p>
                    <a href="@Url.Action("DangNhap", "NguoiDung")" class="hvr-skew-backward">Login</a>

                </div>
                <div class="clearfix"> </div>
            </form>
        }
    </div>
</div>


